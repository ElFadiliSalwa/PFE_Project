{% extends 'including/masterPage.html.twig'  %}
{% block head %}
   <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
{% endblock %}
{% block body %}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Forms</h5>
              <div class="card">
                <div class="card-body">
                  <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>CNE</th>
                        <th>Nom complet</th>
                        <th>Téléphone</th>
                        <th>Département</th>
                        <th>Filiére</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    	{% for admin in admins %}
                      <tr>
		                        <td>
		                          <i class="fab fa-bootstrap fa-lg text-primary me-3"></i> <strong>{{admin.email }}</strong>
		                        </td>
		                        <td>{{admin.nom }} {{admin.prenom }}</td>
		                        <td>{{admin.tel }}</td>
		                        <td>{{admin.email }}</td>
		                        <td>{{admin.adresse }}</td>
		                        <td> 		                        
		                          <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
			                           <a href="#" data-bs-toggle="modal" data-bs-target="#myModal{{admin.id }}">
			                            <li
			                              data-bs-toggle="tooltip"
			                              data-popup="tooltip-custom"
			                              data-bs-placement="top"
			                              class="avatar avatar-xs pull-up"
			                              title="Supprimer"
			                            >
			                             <i class="bx bx-trash me-1" style="color:red"></i> 
			                            </li>
		                            </a>
		                            <div class="modal fade" id="myModal{{admin.id }}">
                                  <div class="modal-dialog">
                                    <div class="modal-content">
                                      <!-- Modal body -->
                                      <div class="modal-body">
                                        Voulez-vous vraiment supprimer cet élément?
                                      </div>
                                      <!-- Modal footer -->
                                      <div class="modal-footer">
                                        <a type="button" class="btn btn-danger"  href="{{ path('delete',['id' = {{admin.id}}]) }}">Oui</a>
                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Non</button>
                                      </div>
                                  </div>
                                </div>
		                            <a href="">
			                            <li
			                              data-bs-toggle="tooltip"
			                              data-popup="tooltip-custom"
			                              data-bs-placement="top"
			                              class="avatar avatar-xs pull-up"
			                              title="Modifier"
			                            >
			                              <i class="bx bx-edit me-1" style="color:green"></i>
			                            </li>
		                            </a>
		                          </ul>
		                        </td>
		                      </tr>
                    	{% endfor %}
                    </tbody>
                  </table>
                </div>
                </div>
              </div>
            </div>
          </div>
{% endblock %}  